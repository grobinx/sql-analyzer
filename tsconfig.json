    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true // Dodaj tę linię
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}